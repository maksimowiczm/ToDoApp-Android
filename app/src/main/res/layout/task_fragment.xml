        android:ellipsize="end"
        android:maxLines="5"
        android:text="TytuÅ‚"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="date"
        android:textColor="@color/gray"
        android:textSize="12dp" />
</LinearLayout>